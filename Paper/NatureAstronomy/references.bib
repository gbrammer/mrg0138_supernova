	journal = {The Astrophysical Journal},
	author = {Sako, Masao and Bassett, Bruce and Connolly, Brian and Dilday, Benjamin and Cambell, Heather and Frieman, Joshua A. and Gladney, Larry and Kessler, Richard and Lampeitl, Hubert and Marriner, John and Miquel, Ramon and Nichol, Robert C. and Schneider, Donald P. and Smith, Mathew and Sollerman, Jesper},
