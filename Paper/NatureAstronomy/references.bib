@article{sako_photometric_2011,
	title = {{PHOTOMETRIC} {TYPE} {Ia} {SUPERNOVA} {CANDIDATES} {FROM} {THE} {THREE}-{YEAR} {SDSS}-{II} {SN} {SURVEY} {DATA}},
