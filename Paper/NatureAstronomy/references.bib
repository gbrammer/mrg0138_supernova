	journal = {The Astrophysical Journal},
	author = {Drout, M. R. and Chornock, R. and Soderberg, A. M. and Sanders, N. E. and McKinnon, R. and Rest, A. and Foley, R. J. and Milisavljevic, D. and Margutti, R. and Berger, E. and Calkins, M. and Fong, W. and Gezari, S. and Huber, M. E. and Kankare, E. and Kirshner, R. P. and Leibler, C. and Lunnan, R. and Mattila, S. and Marion, G. H. and Narayan, G. and Riess, A. G. and Roth, K. C. and Scolnic, D. and Smartt, S. J. and Tonry, J. L. and Burgett, W. S. and Chambers, K. C. and Hodapp, K. W. and Jedicke, R. and Kaiser, N. and Magnier, E. A. and Metcalfe, N. and Morgan, J. S. and Price, P. A. and Waters, C.},
