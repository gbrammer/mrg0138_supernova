	journal = {The Astrophysical Journal},
	author = {Kiewe, Michael and Gal-Yam, Avishay and Arcavi, Iair and Leonard, Douglas C. and Emilio Enriquez, J. and Bradley Cenko, S. and Fox, Derek B. and Moon, Dae-Sik and Sand, David J. and Soderberg, Alicia M. and {(The CCCP)}},
