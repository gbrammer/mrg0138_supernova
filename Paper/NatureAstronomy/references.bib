@article{childress_host_2013,
	title = {{HOST} {GALAXY} {PROPERTIES} {AND} {HUBBLE} {RESIDUALS} {OF} {TYPE} {Ia} {SUPERNOVAE} {FROM} {THE} {NEARBY} {SUPERNOVA} {FACTORY}},
