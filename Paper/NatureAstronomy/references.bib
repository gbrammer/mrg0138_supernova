@article{suyu_dissecting_2010,
	title = {{DISSECTING} {THE} {GRAVITATIONAL} {LENS} {B1608}+656. {II}. {PRECISION} {MEASUREMENTS} {OF} {THE} {HUBBLE} {CONSTANT}, {SPATIAL} {CURVATURE}, {AND} {THE} {DARK} {ENERGY} {EQUATION} {OF} {STATE}},
