	url = {https://ui.adsabs.harvard.edu/2002MNRAS.337L...6T/abstract},
	doi = {10.1046/j.1365-8711.2002.06107.x},
	abstract = {We combine lensing, stellar kinematic and mass-to-light ratio constraints to build a two-component (luminous plus dark) mass model of the early-type lens galaxy in PG1115+080. We find a total mass density profile steeper than r{\textless}SUP{\textgreater}-2{\textless}/SUP{\textgreater}, effectively ρ{\textasciitilde}r{\textless}SUP{\textgreater}-γ'{\textless}/SUP{\textgreater} with γ'= 2.35 +/- 0.1 +/- 0.05 (random + systematic). The stellar mass fraction is f{\textless}SUB{\textgreater}*{\textless}/SUB{\textgreater}= 0.67{\textless}SUP{\textgreater}+0.20{\textless}/SUP{\textgreater}{\textless}SUB{\textgreater}-0.25{\textless}/SUB{\textgreater}+/- 0.03 inside the Einstein radius (R{\textless}SUB{\textgreater}E{\textless}/SUB{\textgreater}{\textasciitilde} 1.2 effective radii). The dynamical mass model breaks the degeneracies in the mass profile of the lens galaxy and allows us to obtain a value of the Hubble constant that is no longer dominated by systematic errors: H{\textless}SUB{\textgreater}0{\textless}/SUB{\textgreater}= 59{\textless}SUP{\textgreater}+12{\textless}/SUP{\textgreater}{\textless}SUB{\textgreater}-7{\textless}/SUB{\textgreater}+/- 3 km s{\textless}SUP{\textgreater}-1{\textless}/SUP{\textgreater} Mpc{\textless}SUP{\textgreater}-1{\textless}/SUP{\textgreater} (68 per cent confidence level; Ω{\textless}SUB{\textgreater}m{\textless}/SUB{\textgreater}= 0.3, Ω{\textless}SUB{\textgreater}Λ{\textless}/SUB{\textgreater}= 0.7). The offset of PG1115+080 from the Fundamental Plane might indicate deviations from homology of the mass profile of some early-type galaxies.},
	language = {en},
	urldate = {2019-10-23},
	journal = {Monthly Notices of the Royal Astronomical Society},
	author = {Treu, T. and Koopmans, L. V. E.},
	month = dec,
	year = {2002},
