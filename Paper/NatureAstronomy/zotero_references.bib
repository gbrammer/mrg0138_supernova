	journal = {The Astrophysical Journal},
	author = {Grillo, C. and Karman, W. and Suyu, S. H. and Rosati, P. and Balestra, I. and Mercurio, A. and Lombardi, M. and Treu, T. and Caminha, G. B. and Halkola, A. and Rodney, S. A. and Gavazzi, R. and Caputi, K. I.},
