@article{petrushevska_testing_2017,
	title = {Testing for redshift evolution of {Type} {Ia} supernovae using the strongly lensed {PS1}-10afx at z = 1.4},
	volume = {603},
	url = {https://ui.adsabs.harvard.edu/2017A&A...603A.136P/abstract},
