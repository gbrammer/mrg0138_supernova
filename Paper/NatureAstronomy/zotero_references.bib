	author = {Colbert, James W. and Teplitz, Harry and Atek, Hakim and Bunker, Andrew and Rafelski, Marc and Ross, Nathaniel and Scarlata, Claudia and Bedregal, Alejandro G. and Dominguez, Alberto and Dressler, Alan and Henry, Alaina and Malkan, Matt and Martin, Crystal L. and Masters, Dan and McCarthy, Patrick and Siana, Brian},
	month = dec,
