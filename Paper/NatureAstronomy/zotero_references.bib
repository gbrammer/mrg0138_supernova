	journal = {The Astrophysical Journal},
	author = {Greene, Zach S. and Suyu, Sherry H. and Treu, Tommaso and Hilbert, Stefan and Auger, Matthew W. and Collett, Thomas E. and Marshall, Philip J. and Fassnacht, Christopher D. and Blandford, Roger D. and Bradač, Maruša and Koopmans, Léon V. E.},
