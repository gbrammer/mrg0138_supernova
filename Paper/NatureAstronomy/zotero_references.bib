	author = {Guy, J. and Sullivan, M. and Conley, A. and Regnault, N. and Astier, P. and Balland, C. and Basa, S. and Carlberg, R. G. and Fouchez, D. and Hardin, D. and Hook, I. M. and Howell, D. A. and Pain, R. and Palanque-Delabrouille, N. and Perrett, K. M. and Pritchet, C. J. and Rich, J. and Ruhlmann-Kleider, V. and Balam, D. and Baumont, S. and Ellis, R. S. and Fabbro, S. and Fakhouri, H. K. and Fourmanoit, N. and González-Gaitán, S. and Graham, M. L. and Hsiao, E. and Kronborg, T. and Lidman, C. and Mourao, A. M. and Perlmutter, S. and Ripoche, P. and Suzuki, N. and Walker, E. S.},
