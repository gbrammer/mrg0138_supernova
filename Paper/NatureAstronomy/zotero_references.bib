@article{wucknitz_degeneracies_2002,
	title = {Degeneracies and scaling relations in general power-law models for gravitational lenses},
	volume = {332},
	url = {https://ui.adsabs.harvard.edu/2002MNRAS.332..951W/abstract},
	doi = {10.1046/j.1365-8711.2002.05426.x},
	abstract = {The time-delay in gravitational lenses can be used to derive the Hubble constant in a relatively simple way. The results of this method are less dependent on astrophysical assumptions than in many other methods. For systems with accurately measured positions and time-delays, the most important uncertainty is related to the mass model used. Simple parametric models like isothermal ellipsoidal mass distributions seem to provide consistent results with a reasonably small scatter when applied to several lens systems. We discuss a family of models with a separable radial power law and an arbitrary angular dependence for the potential ψ=r{\textless}SUP{\textgreater}β{\textless}/SUP{\textgreater}F(θ). Isothermal potentials are a special case of these models with β=1. An additional external shear is used to take into account perturbations from other galaxies. Using a simple linear formalism for quadruple lenses, we can derive H{\textless}SUB{\textgreater}0{\textless}/SUB{\textgreater} as a function of the observables and the shear. If the latter is fixed, the result depends on the assumed power-law exponent according to H{\textless}SUB{\textgreater}0{\textless}/SUB{\textgreater}{\textasciitilde}(2-β)/β. The effect of external shear is quantified by introducing a `critical shear' γ{\textless}SUB{\textgreater}c{\textless}/SUB{\textgreater} as a measure for the amount of shear that changes the result significantly. The analysis shows that in the general case H{\textless}SUB{\textgreater}0{\textless}/SUB{\textgreater} and γ{\textless}SUB{\textgreater}c{\textless}/SUB{\textgreater} do not depend on the position of the lens galaxy. Spherical lens models with images close to the Einstein radius with fitted external shear differ by a factor of β/2 from shearless models, leading to H{\textless}SUB{\textgreater}0{\textless}/SUB{\textgreater}{\textasciitilde}2-β in this case. We discuss these results and compare them with numerical models for a number of real lens systems.},
	language = {en},
	urldate = {2019-10-23},
	journal = {Monthly Notices of the Royal Astronomical Society},
	author = {Wucknitz, Olaf},
	month = jun,
	year = {2002},
	pages = {951},
}

@article{xu_lens_2016,
	title = {Lens galaxies in the {Illustris} simulation: power-law models and the bias of the {Hubble} constant from time delays},
	volume = {456},
	shorttitle = {Lens galaxies in the {Illustris} simulation},
	url = {https://ui.adsabs.harvard.edu/2016MNRAS.456..739X/abstract},
	doi = {10.1093/mnras/stv2708},
	abstract = {A power-law density model, I.e. ρ (r) ∝ r{\textasciicircum}\{-γ {\textasciicircum}' \vphantom{\{}\}\}, has been commonly employed in strong gravitational lensing studies, including the so-called time-delay technique used to infer the Hubble constant H{\textless}SUB{\textgreater}0{\textless}/SUB{\textgreater}. However, since the radial scale at which strong lensing features are formed corresponds to the transition from the dominance of baryonic matter to dark matter, there is no known reason why galaxies should follow a power law in density. The assumption of a power law artificially breaks the mass-sheet degeneracy, a well-known invariance transformation in gravitational lensing which affects the product of Hubble constant and time delay and can therefore cause a bias in the determination of H{\textless}SUB{\textgreater}0{\textless}/SUB{\textgreater} from the time-delay technique. In this paper, we use the Illustris hydrodynamical simulations to estimate the amplitude of this bias, and to understand how it is related to observational properties of galaxies. Investigating a large sample of Illustris galaxies that have velocity dispersion σ{\textless}SUB{\textgreater}SIE{\textless}/SUB{\textgreater} ≥ 160 km s{\textless}SUP{\textgreater}-1{\textless}/SUP{\textgreater} at redshifts below z = 1, we find that the bias on H{\textless}SUB{\textgreater}0{\textless}/SUB{\textgreater} introduced by the power-law assumption can reach 20-50 per cent, with a scatter of 10-30 per cent (rms). However, we find that by selecting galaxies with an inferred power-law model slope close to isothermal, it is possible to reduce the bias on H{\textless}SUB{\textgreater}0{\textless}/SUB{\textgreater} to ≲ 5 per cent and the scatter to ≲ 10 per cent. This could potentially be used to form less biased statistical samples for H{\textless}SUB{\textgreater}0{\textless}/SUB{\textgreater} measurements in the upcoming large survey era.},
	language = {en},
	urldate = {2019-10-23},
	journal = {Monthly Notices of the Royal Astronomical Society},
	author = {Xu, Dandan and Sluse, Dominique and Schneider, Peter and Springel, Volker and Vogelsberger, Mark and Nelson, Dylan and Hernquist, Lars},
	month = feb,
	year = {2016},
	pages = {739},
}

@article{wong_h0licow_2017,
	title = {{H0LiCOW} - {IV}. {Lens} mass model of {HE} 0435-1223 and blind measurement of its time-delay distance for cosmology},
	volume = {465},
	url = {https://ui.adsabs.harvard.edu/2017MNRAS.465.4895W/abstract},
	doi = {10.1093/mnras/stw3077},
	abstract = {Strong gravitational lenses with measured time delays between the multiple images allow a direct measurement of the time-delay distance to the lens, and thus a measure of cosmological parameters, particularly the Hubble constant, H{\textless}SUB{\textgreater}0{\textless}/SUB{\textgreater}. We present a blind lens model analysis of the quadruply imaged quasar lens HE 0435-1223 using deep Hubble Space Telescope imaging, updated time-delay measurements from the COSmological MOnitoring of GRAvItational Lenses (COSMOGRAIL), a measurement of the velocity dispersion of the lens galaxy based on Keck data, and a characterization of the mass distribution along the line of sight. HE 0435-1223 is the third lens analysed as a part of the H{\textless}SUB{\textgreater}0{\textless}/SUB{\textgreater} Lenses in COSMOGRAIL's Wellspring (H0LiCOW) project. We account for various sources of systematic uncertainty, including the detailed treatment of nearby perturbers, the parametrization of the galaxy light and mass profile, and the regions used for lens modelling. We constrain the effective time-delay distance to be D\_\{∆ t\}= 2612\_\{-191\}{\textasciicircum}\{+208\} Mpc, a precision of 7.6 per cent. From HE 0435-1223 alone, we infer a Hubble constant of H{\textless}SUB{\textgreater}0{\textless}/SUB{\textgreater} = 73.1\_\{-6.0\}{\textasciicircum}\{+5.7\} km s{\textasciicircum}\{-1 Mpc{\textasciicircum}\{-1\}\} assuming a flat ΛCDM cosmology. The cosmographic inference based on the three lenses analysed by H0LiCOW to date is presented in a companion paper (H0LiCOW Paper V).},
	language = {en},
	urldate = {2019-10-23},
	journal = {Monthly Notices of the Royal Astronomical Society},
	author = {Wong, Kenneth C. and Suyu, Sherry H. and Auger, Matthew W. and Bonvin, Vivien and Courbin, Frederic and Fassnacht, Christopher D. and Halkola, Aleksi and Rusu, Cristian E. and Sluse, Dominique and Sonnenfeld, Alessandro and Treu, Tommaso and Collett, Thomas E. and Hilbert, Stefan and Koopmans, Leon V. E. and Marshall, Philip J. and Rumbaugh, Nicholas},
	month = mar,
