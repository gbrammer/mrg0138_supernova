@article{collett_observational_2016,
	title = {Observational selection biases in time-delay strong lensing and their impact on cosmography},
	volume = {462},
	url = {https://ui.adsabs.harvard.edu/2016MNRAS.462.3255C/abstract},
	doi = {10.1093/mnras/stw1856},
	abstract = {Inferring cosmological parameters from time-delay strong lenses requires a significant investment of telescope time; it is therefore tempting to focus on the systems with the brightest sources, the highest image multiplicities and the widest image separations. We investigate if this selection bias can influence the properties of the lenses studied and the cosmological parameters inferred. Using an ellipsoidal power-law deflector population, we build a sample of double- and quadruple-image systems. Assuming reasonable thresholds on image separation and flux, based on current lens monitoring campaigns, we find that the typical density profile slopes of monitorable lenses are significantly shallower than the input ensemble. From a sample of quads, we find that this selection function can introduce a 3.5 per cent bias on the inferred time-delay distances if the properties of the input ensemble are (incorrectly) used as priors on the lens model. This bias remains at the 2.4 per cent level when high-resolution imaging of the quasar host is used to precisely infer the properties of individual lenses. We also investigate if the lines of sight for monitorable strong lenses are biased. The expectation value for the line-of-sight convergence is increased by 0.009 (0.004) for quads (doubles) implying a 0.9 per cent (0.4 per cent) bias on H{\textless}SUB{\textgreater}0{\textless}/SUB{\textgreater}. We therefore conclude that whilst the properties of typical quasar lenses and their lines of sight do deviate from the global population, the total magnitude of this effect is likely to be a subdominant effect for current analyses, but has the potential to be a major systematic for samples of ̃25 or more lenses.},
	language = {en},
	urldate = {2019-10-23},
	journal = {Monthly Notices of the Royal Astronomical Society},
	author = {Collett, Thomas E. and Cunnington, Steven D.},
	month = nov,
	year = {2016},
	pages = {3255},
}

@article{coe_cosmological_2009,
	title = {Cosmological {Constraints} from {Gravitational} {Lens} {Time} {Delays}},
	volume = {706},
	url = {https://ui.adsabs.harvard.edu/2009ApJ...706...45C/abstract},
	doi = {10.1088/0004-637X/706/1/45},
	abstract = {Future large ensembles of time delay (TD) lenses have the potential to provide interesting cosmological constraints complementary to those of other methods. In a flat universe with constant w including a Planck prior, The Large Synoptic Survey Telescope TD measurements for {\textasciitilde}4000 lenses should constrain the local Hubble constant h to {\textasciitilde}0.007 ({\textasciitilde}1\%), Ω{\textless}SUB{\textgreater} de {\textless}/SUB{\textgreater} to {\textasciitilde}0.005, and w to {\textasciitilde}0.026 (all 1σ precisions). Similar constraints could be obtained by a dedicated gravitational lens observatory (OMEGA) which would obtain precise TD and mass model measurements for {\textasciitilde}100 well-studied lenses. We compare these constraints (as well as those for a more general cosmology) to the "optimistic Stage IV" constraints expected from weak lensing, supernovae, baryon acoustic oscillations, and cluster counts, as calculated by the Dark Energy Task Force. TDs yield a modest constraint on a time-varying w(z), with the best constraint on w(z) at the "pivot redshift" of z ≈ 0.31. Our Fisher matrix calculation is provided to allow TD constraints to be easily compared to and combined with constraints from other experiments. We also show how cosmological constraining power varies as a function of numbers of lenses, lens model uncertainty, TD precision, redshift precision, and the ratio of four-image to two-image lenses.},
	language = {en},
	urldate = {2019-10-23},
	journal = {The Astrophysical Journal},
	author = {Coe, Dan and Moustakas, Leonidas A.},
	month = nov,
	year = {2009},
	pages = {45},
}

@article{chirivi_macs_2018,
	title = {{MACS} {J0416}.1-2403: {Impact} of line-of-sight structures on strong gravitational lensing modelling of galaxy clusters},
	volume = {614},
	shorttitle = {{MACS} {J0416}.1-2403},
	url = {https://ui.adsabs.harvard.edu/2018A&A...614A...8C/abstract},
	doi = {10.1051/0004-6361/201731433},
	abstract = {Exploiting the powerful tool of strong gravitational lensing by galaxy clusters to study the highest-redshift Universe and cluster mass distributions relies on precise lens mass modelling. In this work, we aim to present the first attempt at modelling line-of-sight (LOS) mass distribution in addition to that of the cluster, extending previous modelling techniques that assume mass distributions to be on a single lens plane. We have focussed on the Hubble Frontier Field cluster MACS J0416.1-2403, and our multi-plane model reproduces the observed image positions with a rms offset of 0.''53. Starting from this best-fitting model, we simulated a mock cluster that resembles MACS J0416.1-2403 in order to explore the effects of LOS structures on cluster mass modelling. By systematically analysing the mock cluster under different model assumptions, we find that neglecting the lensing environment has a significant impact on the reconstruction of image positions (rms 0.''3); accounting for LOS galaxies as if they were at the cluster redshift can partially reduce this offset. Moreover, foreground galaxies are more important to include into the model than the background ones. While the magnification factor of the lensed multiple images are recovered within 10\% for 95\% of them, those 5\% that lie near critical curves can be significantly affected by the exclusion of the lensing environment in the models. In addition, LOS galaxies cannot explain the apparent discrepancy in the properties of massive sub-halos between MACS J0416.1-2403 and N-body simulated clusters. Since our model of MACS J0416.1-2403 with LOS galaxies only reduced modestly the rms offset in the image positions, we conclude that additional complexities would be needed in future models of MACS J0416.1-2403.},
	language = {en},
	urldate = {2019-10-23},
	journal = {Astronomy and Astrophysics},
	author = {Chirivì, G. and Suyu, S. H. and Grillo, C. and Halkola, A. and Balestra, I. and Caminha, G. B. and Mercurio, A. and Rosati, P.},
	month = jun,
	year = {2018},
	pages = {A8},
}

@article{chen_sharp_2016,
	title = {{SHARP} - {III}. {First} use of adaptive-optics imaging to constrain cosmology with gravitational lens time delays},
	volume = {462},
	url = {https://ui.adsabs.harvard.edu/2016MNRAS.462.3457C/abstract},
	doi = {10.1093/mnras/stw991},
	abstract = {Accurate and precise measurements of the Hubble constant are critical for testing our current standard cosmological model and revealing possibly new physics. With Hubble Space Telescope (HST) imaging, each strong gravitational lens system with measured time delays can allow one to determine the Hubble constant with an uncertainty of ̃7 per cent. Since HST will not last forever, we explore adaptive-optics (AO) imaging as an alternative that can provide higher angular resolution than HST imaging but has a less stable point spread function (PSF) due to atmospheric distortion. To make AO imaging useful for time-delay-lens cosmography, we develop a method to extract the unknown PSF directly from the imaging of strongly lensed quasars. In a blind test with two mock data sets created with different PSFs, we are able to recover the important cosmological parameters (time-delay distance, external shear, lens-mass profile slope, and total Einstein radius). Our analysis of the Keck AO image of the strong lens system RXJ 1131-1231 shows that the important parameters for cosmography agree with those based on HST imaging and modelling within 1σ uncertainties. Most importantly, the constraint on the model time-delay distance by using AO imaging with 0.09 arcsec resolution is tighter by ̃50 per cent than the constraint of time-delay distance by using HST imaging with 0.09 arcsec when a power-law mass distribution for the lens system is adopted. Our PSF reconstruction technique is generic and applicable to data sets that have multiple nearby point sources, enabling scientific studies that require high-precision models of the PSF.},
	language = {en},
	urldate = {2019-10-23},
	journal = {Monthly Notices of the Royal Astronomical Society},
	author = {Chen, Geoff C.-F. and Suyu, Sherry H. and Wong, Kenneth C. and Fassnacht, Christopher D. and Chiueh, Tzihong and Halkola, Aleksi and Hu, I. Shing and Auger, Matthew W. and Koopmans, Léon V. E. and Lagattuta, David J. and McKean, John P. and Vegetti, Simona},
	month = nov,
	year = {2016},
	pages = {3457},
}

@article{chen_constraining_2018,
	title = {Constraining the microlensing effect on time delays with a new time-delay prediction model in {H}{\textless}{SUB}{\textgreater}0{\textless}/{SUB}{\textgreater} measurements},
	volume = {481},
	url = {https://ui.adsabs.harvard.edu/2018MNRAS.481.1115C/abstract},
	doi = {10.1093/mnras/sty2350},
	abstract = {Time-delay strong lensing provides a unique way to directly measure the Hubble constant (H{\textless}SUB{\textgreater}0{\textless}/SUB{\textgreater}). The precision of the H{\textless}SUB{\textgreater}0{\textless}/SUB{\textgreater} measurement depends on the uncertainties in the time-delay measurements, the mass distribution of the main deflector(s), and the mass distribution along the line of sight. Tie \&amp; Kochanek have proposed a new microlensing effect on time delays based on differential magnification of the coherent accretion disc variability of the lensed quasar. If real, this effect could significantly broaden the uncertainty on the time-delay measurements by up to 30 per cent for lens systems such as PG 1115+080, which have relatively short time delays and monitoring over several different epochs. In this paper we develop a new technique that uses the cosmological time-delay ratios and simulated microlensing maps within a Bayesian framework in order to limit the allowed combinations of microlensing delays and thus to lessen the uncertainties due to the proposed effect. We show that, under the assumption of Tie \&amp; Kochanek, the uncertainty on the time-delay distance (D{\textless}SUB{\textgreater}∆t{\textless}/SUB{\textgreater}, which is proportional to 1/H{\textless}SUB{\textgreater}0{\textless}/SUB{\textgreater}) of the short time-delay (̃18 d) lens, PG 1115+080, increases from ̃7 per cent to ̃10 per cent by simultaneously fitting the three time-delay measurements from the three different data sets across 20 yr, while in the case of the long time-delay (̃90 d) lens, the microlensing effect on time delays is negligible as the uncertainty on D{\textless}SUB{\textgreater}∆t{\textless}/SUB{\textgreater} of RXJ 1131-1231 only increases from ̃2.5 per cent to ̃2.6 per cent.},
	language = {en},
	urldate = {2019-10-23},
	journal = {Monthly Notices of the Royal Astronomical Society},
	author = {Chen, Geoff C.-F. and Chan, James H. H. and Bonvin, Vivien and Fassnacht, Christopher D. and Rojas, Karina and Millon, Martin and Courbin, Fred and Suyu, Sherry H. and Wong, Kenneth C. and Sluse, Dominique and Treu, Tommaso and Shajib, Anowar J. and Hsueh, Jen-Wei and Lagattuta, David J. and Koopmans, Léon V. E. and Vegetti, Simona and McKean, John P.},
	month = nov,
