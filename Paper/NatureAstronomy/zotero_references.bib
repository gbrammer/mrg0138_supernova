@article{goobar_iptf16geu:_2017,
	title = {{iPTF16geu}: {A} multiply imaged, gravitationally lensed type {Ia} supernova},
	volume = {356},
	shorttitle = {{iPTF16geu}},
	url = {https://ui.adsabs.harvard.edu/2017Sci...356..291G/abstract},
