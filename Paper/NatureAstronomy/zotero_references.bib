@article{bonvin_cosmograil:_2016,
	title = {{COSMOGRAIL}: the {COSmological} {MOnitoring} of {GRAvItational} {Lenses}. {XV}. {Assessing} the achievability and precision of time-delay measurements},
	volume = {585},
	shorttitle = {{COSMOGRAIL}},
	url = {https://ui.adsabs.harvard.edu/2016A&A...585A..88B/abstract},
	doi = {10.1051/0004-6361/201526704},
	abstract = {COSMOGRAIL is a long-term photometric monitoring of gravitationally lensed quasars aimed at implementing Refsdal's time-delay method to measure cosmological parameters, in particular H{\textless}SUB{\textgreater}0{\textless}/SUB{\textgreater}. Given the long and well sampled light curves of strongly lensed quasars, time-delay measurements require numerical techniques whose quality must be assessed. To this end, and also in view of future monitoring programs or surveys such as the LSST, a blind signal processing competition named Time Delay Challenge 1 (TDC1) was held in 2014. The aim of the present paper, which is based on the simulated light curves from the TDC1, is double. First, we test the performance of the time-delay measurement techniques currently used in COSMOGRAIL. Second, we analyse the quantity and quality of the harvest of time delays obtained from the TDC1 simulations. To achieve these goals, we first discover time delays through a careful inspection of the light curves via a dedicated visual interface. Our measurement algorithms can then be applied to the data in an automated way. We show that our techniques have no significant biases, and yield adequate uncertainty estimates resulting in reduced χ{\textless}SUP{\textgreater}2{\textless}/SUP{\textgreater} values between 0.5 and 1.0. We provide estimates for the number and precision of time-delay measurements that can be expected from future time-delay monitoring campaigns as a function of the photometric signal-to-noise ratio and of the true time delay. We make our blind measurements on the TDC1 data publicly available.},
	language = {en},
	urldate = {2019-10-23},
	journal = {Astronomy and Astrophysics},
	author = {Bonvin, V. and Tewes, M. and Courbin, F. and Kuntzer, T. and Sluse, D. and Meylan, G.},
	month = jan,
	year = {2016},
	pages = {A88},
}

@article{birrer_mass-sheet_2016,
	title = {The mass-sheet degeneracy and time-delay cosmography: analysis of the strong lens {RXJ1131}-1231},
	volume = {2016},
	shorttitle = {The mass-sheet degeneracy and time-delay cosmography},
	url = {https://ui.adsabs.harvard.edu/2016JCAP...08..020B/abstract},
	doi = {10.1088/1475-7516/2016/08/020},
	abstract = {We present extended modelling of the strong lens system RXJ1131-1231 with archival data in two HST bands in combination with existing line-of-sight contribution and velocity dispersion estimates. Our focus is on source size and its influence on time-delay cosmography. We therefore examine the impact of mass-sheet degeneracy and especially the degeneracy pointed out by Schneider \&amp; Sluse (2013) [1] using the source reconstruction scale. We also extend on previous work by further exploring the effects of priors on the kinematics of the lens and the external convergence in the environment of the lensing system. Our results coming from RXJ1131-1231 are given in a simple analytic form so that they can be easily combined with constraints coming from other cosmological probes. We find that the choice of priors on lens model parameters and source size are subdominant for the statistical errors for H{\textless}SUB{\textgreater}0{\textless}/SUB{\textgreater} measurements of this systems. The choice of prior for the source is sub-dominant at present (2\% uncertainty on H{\textless}SUB{\textgreater}0{\textless}/SUB{\textgreater}) but may be relevant for future studies. More importantly, we find that the priors on the kinematic anisotropy of the lens galaxy have a significant impact on our cosmological inference. When incorporating all the above modeling uncertainties, we find H{\textless}SUB{\textgreater}0{\textless}/SUB{\textgreater} = 86.6{\textless}SUP{\textgreater}+6.8{\textless}/SUP{\textgreater}{\textless}SUB{\textgreater}-6.9{\textless}/SUB{\textgreater} km s{\textless}SUP{\textgreater}-1{\textless}/SUP{\textgreater} Mpc{\textless}SUP{\textgreater}-1{\textless}/SUP{\textgreater}, when using kinematic priors similar to other studies. When we use a different kinematic prior motivated by Barnabè et al. (2012) [2] but covering the same anisotropic range, we find H{\textless}SUB{\textgreater}0{\textless}/SUB{\textgreater} = 74.5{\textless}SUP{\textgreater}+8.0{\textless}/SUP{\textgreater}{\textless}SUB{\textgreater}-7.8{\textless}/SUB{\textgreater} km s{\textless}SUP{\textgreater}-1{\textless}/SUP{\textgreater} Mpc{\textless}SUP{\textgreater}-1{\textless}/SUP{\textgreater}. This means that the choice of kinematic modeling and priors have a significant impact on cosmographic inferences. The way forward is either to get better velocity dispersion measures which would down weight the impact of the priors or to construct physically motivated priors for the velocity dispersion model.},
	language = {en},
	urldate = {2019-10-23},
	journal = {Journal of Cosmology and Astroparticle Physics},
	author = {Birrer, Simon and Amara, Adam and Refregier, Alexandre},
	month = aug,
	year = {2016},
	pages = {020},
}

@article{barbary_hubble_2012,
	title = {The {Hubble} {Space} {Telescope} {Cluster} {Supernova} {Survey}. {II}. {The} {Type} {Ia} {Supernova} {Rate} in {High}-redshift {Galaxy} {Clusters}},
	volume = {745},
	url = {https://ui.adsabs.harvard.edu/2012ApJ...745...32B/abstract},
	doi = {10.1088/0004-637X/745/1/32},
	abstract = {We report a measurement of the Type Ia supernova (SN Ia) rate in galaxy clusters at 0.9 \&lt; z \&lt; 1.46 from the Hubble Space Telescope Cluster Supernova Survey. This is the first cluster SN Ia rate measurement with detected z \&gt; 0.9 SNe. Finding 8 ± 1 cluster SNe Ia, we determine an SN Ia rate of 0.50{\textless}SUP{\textgreater}+0.23{\textless}/SUP{\textgreater} {\textless}SUB{\textgreater}-0.19{\textless}/SUB{\textgreater} (stat) {\textless}SUP{\textgreater}+0.10{\textless}/SUP{\textgreater} {\textless}SUB{\textgreater}-0.09{\textless}/SUB{\textgreater} (sys) h {\textless}SUP{\textgreater}2{\textless}/SUP{\textgreater} {\textless}SUB{\textgreater}70{\textless}/SUB{\textgreater} SNuB (SNuB ≡ 10{\textless}SUP{\textgreater}-12{\textless}/SUP{\textgreater} SNe L {\textless}SUP{\textgreater}-1{\textless}/SUP{\textgreater} {\textless}SUB{\textgreater}☉, B {\textless}/SUB{\textgreater} yr{\textless}SUP{\textgreater}-1{\textless}/SUP{\textgreater}). In units of stellar mass, this translates to 0.36{\textless}SUP{\textgreater}+0.16{\textless}/SUP{\textgreater} {\textless}SUB{\textgreater}-0.13{\textless}/SUB{\textgreater} (stat) {\textless}SUP{\textgreater}+0.07{\textless}/SUP{\textgreater} {\textless}SUB{\textgreater}-0.06{\textless}/SUB{\textgreater} (sys) h {\textless}SUP{\textgreater}2{\textless}/SUP{\textgreater} {\textless}SUB{\textgreater}70{\textless}/SUB{\textgreater} SNuM (SNuM ≡ 10{\textless}SUP{\textgreater}-12{\textless}/SUP{\textgreater} SNe M {\textless}SUP{\textgreater}-1{\textless}/SUP{\textgreater} {\textless}SUB{\textgreater}☉{\textless}/SUB{\textgreater} yr{\textless}SUP{\textgreater}-1{\textless}/SUP{\textgreater}). This represents a factor of ≈5 ± 2 increase over measurements of the cluster rate at z \&lt; 0.2. We parameterize the late-time SN Ia delay time distribution (DTD) with a power law: Ψ(t)vpropt{\textless}SUP{\textgreater}s{\textless}/SUP{\textgreater} . Under the approximation of a single-burst cluster formation redshift of z{\textless}SUB{\textgreater}f{\textless}/SUB{\textgreater} = 3, our rate measurement in combination with lower-redshift cluster SN Ia rates constrains s = -1.41{\textless}SUP{\textgreater}+0.47{\textless}/SUP{\textgreater} {\textless}SUB{\textgreater}-0.40{\textless}/SUB{\textgreater}, consistent with measurements of the DTD in the field. This measurement is generally consistent with expectations for the "double degenerate" scenario and inconsistent with some models for the "single degenerate" scenario predicting a steeper DTD at large delay times. We check for environmental dependence and the influence of younger stellar populations by calculating the rate specifically in cluster red-sequence galaxies and in morphologically early-type galaxies, finding results similar to the full cluster rate. Finally, the upper limit of one hostless cluster SN Ia detected in the survey implies that the fraction of stars in the intra-cluster medium is less than 0.47 (95\% confidence), consistent with measurements at lower redshifts. Based in part on observations made with the NASA/ESA Hubble Space Telescope, obtained from the data archive at the Space Telescope Institute. STScI is operated by the association of Universities for Research in Astronomy, Inc., under the NASA contract NAS 5-26555. The observations are associated with program GO-10496.},
	language = {en},
	urldate = {2019-10-23},
	journal = {The Astrophysical Journal},
	author = {Barbary, K. and Aldering, G. and Amanullah, R. and Brodwin, M. and Connolly, N. and Dawson, K. S. and Doi, M. and Eisenhardt, P. and Faccioli, L. and Fadeyev, V. and Fakhouri, H. K. and Fruchter, A. S. and Gilbank, D. G. and Gladders, M. D. and Goldhaber, G. and Goobar, A. and Hattori, T. and Hsiao, E. and Huang, X. and Ihara, Y. and Kashikawa, N. and Koester, B. and Konishi, K. and Kowalski, M. and Lidman, C. and Lubin, L. and Meyers, J. and Morokuma, T. and Oda, T. and Panagia, N. and Perlmutter, S. and Postman, M. and Ripoche, P. and Rosati, P. and Rubin, D. and Schlegel, D. J. and Spadafora, A. L. and Stanford, S. A. and Strovink, M. and Suzuki, N. and Takanashi, N. and Tokita, K. and Yasuda, N. and Project, Supernova Cosmology},
