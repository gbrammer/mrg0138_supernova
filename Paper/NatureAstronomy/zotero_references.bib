@article{koopmans_sloan_2006,
	title = {The {Sloan} {Lens} {ACS} {Survey}. {III}. {The} {Structure} and {Formation} of {Early}-{Type} {Galaxies} and {Their} {Evolution} since z {\textasciitilde} 1},
	volume = {649},
	url = {https://ui.adsabs.harvard.edu/2006ApJ...649..599K/abstract},
	doi = {10.1086/505696},
	abstract = {We present a joint gravitational lensing and stellar-dynamical analysis of 15 massive field early-type galaxies selected from the Sloan Lens ACS (SLACS) Survey. The following numerical results are found: (1) A joint likelihood gives an average logarithmic density slope for the total mass density of \&lt;γ{\textless}SUP{\textgreater}'{\textless}/SUP{\textgreater}\&gt;=2.01{\textless}SUP{\textgreater}+0.02{\textless}/SUP{\textgreater}{\textless}SUB{\textgreater}-0.03{\textless}/SUB{\textgreater} (68\% CL; ρ{\textless}SUB{\textgreater}tot{\textless}/SUB{\textgreater}{\textasciitilde}r{\textless}SUP{\textgreater}-γ{\textless}SUP{\textgreater}'{\textless}/SUP{\textgreater}{\textless}/SUP{\textgreater}) inside \&lt;R{\textless}SUB{\textgreater}Einst{\textless}/SUB{\textgreater}\&gt;=4.2+/-0.4 kpc (rms of 1.6 kpc) for isotropic models. The inferred intrinsic rms spread in logarithmic density slopes is σ{\textless}SUB{\textgreater}γ{\textless}SUP{\textgreater}'{\textless}/SUP{\textgreater}{\textless}/SUB{\textgreater}=0.12. (2) The average position-angle difference between the light distribution and the total mass distribution is found to be \&lt;∆θ\&gt;=0{\textless}SUP{\textgreater}deg{\textless}/SUP{\textgreater}+/-3{\textless}SUP{\textgreater}deg{\textless}/SUP{\textgreater} (rms of 10°), setting an upper limit of \&lt;γ{\textless}SUB{\textgreater}ext{\textless}/SUB{\textgreater}\&gt;\&lt;{\textasciitilde}0.035 on the average external shear. The total mass has an average ellipticity \&lt;q{\textless}SUB{\textgreater}SIE{\textless}/SUB{\textgreater}\&gt;=0.78+/-0.03 (rms of 0.12), which correlates extremely well with the stellar ellipticity, q{\textless}SUB{\textgreater}*{\textless}/SUB{\textgreater}, resulting in \&lt;q{\textless}SUB{\textgreater}SIE{\textless}/SUB{\textgreater}/q{\textless}SUB{\textgreater}*{\textless}/SUB{\textgreater}\&gt;=0.99+/-0.03 (rms of 0.11) for σ\&gt;{\textasciitilde}225 km s{\textless}SUP{\textgreater}-1{\textless}/SUP{\textgreater} omitting three S0 lens galaxies. (3) The average projected dark matter mass fraction is inferred to be \&lt;f{\textless}SUB{\textgreater}DM{\textless}/SUB{\textgreater}\&gt;=0.25+/-0.06 (rms of 0.22) inside \&lt;R{\textless}SUB{\textgreater}Einst{\textless}/SUB{\textgreater}\&gt;, using the stellar mass-to-light ratios derived from the fundamental plane as priors. (4) Combined with results from the Lenses Structure and Dynamics (LSD) Survey at z\&gt;{\textasciitilde}0.3, we find no significant evolution of the total density slope inside one effective radius for galaxies with σ{\textless}SUB{\textgreater}ap{\textless}/SUB{\textgreater}\&gt;=200 km s{\textless}SUP{\textgreater}-1{\textless}/SUP{\textgreater}: a linear fit gives α{\textless}SUB{\textgreater}γ{\textless}SUP{\textgreater}'{\textless}/SUP{\textgreater}{\textless}/SUB{\textgreater}≡d\&lt;γ{\textless}SUP{\textgreater}'{\textless}/SUP{\textgreater}\&gt;/dz=0.23+/-0.16 (1 σ) for the range z=0.08-1.01. The small scatter and absence of significant evolution in the inner density slopes suggest a collisional scenario in which gas and dark matter strongly couple during galaxy formation, leading to a total mass distribution that rapidly converges to dynamical isothermality.},
	language = {en},
	urldate = {2019-10-23},
	journal = {The Astrophysical Journal},
	author = {Koopmans, Léon V. E. and Treu, Tommaso and Bolton, Adam S. and Burles, Scott and Moustakas, Leonidas A.},
