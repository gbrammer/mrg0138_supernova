@article{bonvin_cosmograil:_2016,
	title = {{COSMOGRAIL}: the {COSmological} {MOnitoring} of {GRAvItational} Lenses. {XV}. Assessing the achievability and precision of time-delay measurements},
	volume = {585},
	url = {https://ui.adsabs.harvard.edu/2016A&A...585A..88B/abstract},
	doi = {10.1051/0004-6361/201526704},
	shorttitle = {{COSMOGRAIL}},
	abstract = {{COSMOGRAIL} is a long-term photometric monitoring of gravitationally lensed quasars aimed at implementing Refsdal's time-delay method to measure cosmological parameters, in particular H{\textless}{SUB}{\textgreater}0{\textless}/{SUB}{\textgreater}. Given the long and well sampled light curves of strongly lensed quasars, time-delay measurements require numerical techniques whose quality must be assessed. To this end, and also in view of future monitoring programs or surveys such as the {LSST}, a blind signal processing competition named Time Delay Challenge 1 ({TDC}1) was held in 2014. The aim of the present paper, which is based on the simulated light curves from the {TDC}1, is double. First, we test the performance of the time-delay measurement techniques currently used in {COSMOGRAIL}. Second, we analyse the quantity and quality of the harvest of time delays obtained from the {TDC}1 simulations. To achieve these goals, we first discover time delays through a careful inspection of the light curves via a dedicated visual interface. Our measurement algorithms can then be applied to the data in an automated way. We show that our techniques have no significant biases, and yield adequate uncertainty estimates resulting in reduced χ{\textless}{SUP}{\textgreater}2{\textless}/{SUP}{\textgreater} values between 0.5 and 1.0. We provide estimates for the number and precision of time-delay measurements that can be expected from future time-delay monitoring campaigns as a function of the photometric signal-to-noise ratio and of the true time delay. We make our blind measurements on the {TDC}1 data publicly available.},
	pages = {A88},
	journaltitle = {Astronomy and Astrophysics},
	author = {Bonvin, V. and Tewes, M. and Courbin, F. and Kuntzer, T. and Sluse, D. and Meylan, G.},
	urldate = {2019-10-23},
	date = {2016-01},
	langid = {english}
}

@article{birrer_mass-sheet_2016,
	title = {The mass-sheet degeneracy and time-delay cosmography: analysis of the strong lens {RXJ}1131-1231},
	volume = {2016},
	url = {https://ui.adsabs.harvard.edu/2016JCAP...08..020B/abstract},
	doi = {10.1088/1475-7516/2016/08/020},
	shorttitle = {The mass-sheet degeneracy and time-delay cosmography},
	abstract = {We present extended modelling of the strong lens system {RXJ}1131-1231 with archival data in two {HST} bands in combination with existing line-of-sight contribution and velocity dispersion estimates. Our focus is on source size and its influence on time-delay cosmography. We therefore examine the impact of mass-sheet degeneracy and especially the degeneracy pointed out by Schneider \&amp; Sluse (2013) [1] using the source reconstruction scale. We also extend on previous work by further exploring the effects of priors on the kinematics of the lens and the external convergence in the environment of the lensing system. Our results coming from {RXJ}1131-1231 are given in a simple analytic form so that they can be easily combined with constraints coming from other cosmological probes. We find that the choice of priors on lens model parameters and source size are subdominant for the statistical errors for H{\textless}{SUB}{\textgreater}0{\textless}/{SUB}{\textgreater} measurements of this systems. The choice of prior for the source is sub-dominant at present (2\% uncertainty on H{\textless}{SUB}{\textgreater}0{\textless}/{SUB}{\textgreater}) but may be relevant for future studies. More importantly, we find that the priors on the kinematic anisotropy of the lens galaxy have a significant impact on our cosmological inference. When incorporating all the above modeling uncertainties, we find H{\textless}{SUB}{\textgreater}0{\textless}/{SUB}{\textgreater} = 86.6{\textless}{SUP}{\textgreater}+6.8{\textless}/{SUP}{\textgreater}{\textless}{SUB}{\textgreater}-6.9{\textless}/{SUB}{\textgreater} km s{\textless}{SUP}{\textgreater}-1{\textless}/{SUP}{\textgreater} Mpc{\textless}{SUP}{\textgreater}-1{\textless}/{SUP}{\textgreater}, when using kinematic priors similar to other studies. When we use a different kinematic prior motivated by Barnabè et al. (2012) [2] but covering the same anisotropic range, we find H{\textless}{SUB}{\textgreater}0{\textless}/{SUB}{\textgreater} = 74.5{\textless}{SUP}{\textgreater}+8.0{\textless}/{SUP}{\textgreater}{\textless}{SUB}{\textgreater}-7.8{\textless}/{SUB}{\textgreater} km s{\textless}{SUP}{\textgreater}-1{\textless}/{SUP}{\textgreater} Mpc{\textless}{SUP}{\textgreater}-1{\textless}/{SUP}{\textgreater}. This means that the choice of kinematic modeling and priors have a significant impact on cosmographic inferences. The way forward is either to get better velocity dispersion measures which would down weight the impact of the priors or to construct physically motivated priors for the velocity dispersion model.},
	pages = {020},
	journaltitle = {Journal of Cosmology and Astroparticle Physics},
	author = {Birrer, Simon and Amara, Adam and Refregier, Alexandre},
	urldate = {2019-10-23},
	date = {2016-08},
	langid = {english}
}

@article{barbary_hubble_2012,
	title = {The Hubble Space Telescope Cluster Supernova Survey. {II}. The Type Ia Supernova Rate in High-redshift Galaxy Clusters},
	volume = {745},
