@article{hemmati_photometric_2019,
	title = {Photometric Redshift Calibration Requirements for {WFIRST} Weak-lensing Cosmology: Predictions from {CANDELS}},
	volume = {877},
	issn = {0004-637X},
	url = {https://doi.org/10.3847%2F1538-4357%2Fab1be5},
