	journaltitle = {Astronomy and Astrophysics},
	author = {Petrushevska, T. and Goobar, A. and Lagattuta, D. J. and Amanullah, R. and Hangard, L. and Fabbro, S. and Lidman, C. and Paech, K. and Richard, J. and Kneib, J. P.},
