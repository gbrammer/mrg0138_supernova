@article{tihhonova_h0licow_2018,
	title = {H0LiCOW {VIII}. A weak-lensing measurement of the external convergence in the field of the lensed quasar {HE} 0435-1223},
	volume = {477},
	url = {https://ui.adsabs.harvard.edu/2018MNRAS.477.5657T/abstract},
	doi = {10.1093/mnras/sty1040},
	abstract = {We present a weak gravitational lensing measurement of the external convergence along the line of sight to the quadruply lensed quasar {HE} 0435-1223. Using deep r-band images from Subaru Suprime Cam, we observe galaxies down to a 3σ limiting magnitude of ̃26 mag resulting in a source galaxy density of 14 galaxies per square arcminute after redshift-based cuts. Using an inpainting technique and multiscale entropy filtering algorithm, we find that the region in close proximity to the lens has an estimated external convergence of κ =-0.012{\textasciicircum}\{+0.020\}\_\{-0.013\} and is hence marginally underdense. We also rule out the presence of any halo with a mass greater than M{\textless}{SUB}{\textgreater}vir{\textless}/{SUB}{\textgreater} = 1.6 × 10{\textless}{SUP}{\textgreater}14{\textless}/{SUP}{\textgreater}h{\textless}{SUP}{\textgreater}-1{\textless}/{SUP}{\textgreater}M{\textless}{SUB}{\textgreater}☉{\textless}/{SUB}{\textgreater} (68 per cent confidence limit). Our results, consistent with previous studies of this lens, confirm that the intervening mass along the line of sight to {HE} 0435-1223 does not affect significantly the cosmological results inferred from the time-delay measurements of that specific object.},
