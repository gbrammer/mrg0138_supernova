	author = {Rodney, S. A. and Strolger, L.-G. and Kelly, P. L. and Bradač, M. and Brammer, G. and Filippenko, A. V. and Foley, R. J. and Graur, O. and Hjorth, J. and Jha, S. W. and {McCully}, C. and Molino, A. and Riess, A. G. and Schmidt, K. B. and Selsing, J. and Sharon, K. and Treu, T. and Weiner, B. J. and Zitrin, A.},
