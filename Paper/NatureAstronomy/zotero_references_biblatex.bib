	author = {Hasinger, G. and Capak, P. and Salvato, M. and Barger, A. J. and Cowie, L. L. and Faisst, A. and Hemmati, S. and Kakazu, Y. and Kartaltepe, J. and Masters, D. and Mobasher, B. and Nayyeri, H. and Sanders, D. and Scoville, N. Z. and Suh, H. and Steinhardt, C. and Yang, Fengwei},
	urldate = {2020-05-20},
	date = {2018-05-01},
	keywords = {catalogs, galaxies: distances and redshifts, surveys}
