	author = {Mosher, J. and Guy, J. and Kessler, R. and Astier, P. and Marriner, J. and Betoule, M. and Sako, M. and El-Hage, P. and Biswas, R. and Pain, R. and Kuhlmann, S. and Regnault, N. and Frieman, J. A. and Schneider, D. P.},
