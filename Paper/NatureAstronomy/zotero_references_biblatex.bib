	journaltitle = {Monthly Notices of the Royal Astronomical Society},
	author = {Tihhonova, O. and Courbin, F. and Harvey, D. and Hilbert, S. and Rusu, C. E. and Fassnacht, C. D. and Bonvin, V. and Marshall, P. J. and Meylan, G. and Sluse, D. and Suyu, S. H. and Treu, T. and Wong, K. C.},
