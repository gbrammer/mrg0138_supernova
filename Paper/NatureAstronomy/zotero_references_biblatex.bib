	issn = {['0004-637X']},
	url = {https://ui.adsabs.harvard.edu/1985ApJ...289L...1F/abstract},
	doi = {10.1086/184422},
	shorttitle = {On model-dependent bounds on H 0 from gravitational images},
	abstract = {The images of a background source formed by a foreground mass distribution in a matter-dominated Friedmann cosmology are considered. A transformation is presented that leaves unchanged the image observables, including positions, relative magnifications, apparent luminosities, and differences in propagation times associated with image pairs. The observables are related to the parameters of the source and of a generalized lens model. The transformation is applied to these relations to scale the value of H(0) and to modify the mass distribution of the lens and move the position of the source. One lens model for Q0957 + 561 is discussed in the context of this transformation. The elliptical galaxy G1 is modelled as a singular isothermal sphere, and the light bending of the cluster is represented as a linear function of the impact parameter. It is shown that this model accounts for the positions and relative magnifications of images of Q0957 + 561 and yields a bound on H(0).},
	pages = {L1},
	journaltitle = {The Astrophysical Journal},
	author = {Falco, E. E. and Gorenstein, M. V. and Shapiro, I. I.},
	urldate = {2019-10-23},
	date = {1985-02},
	langid = {english}
}

@article{diego_free-form_2016,
	title = {A free-form prediction for the reappearance of supernova Refsdal in the Hubble Frontier Fields cluster {MACSJ}1149.5+2223},
	volume = {456},
	url = {https://ui.adsabs.harvard.edu/2016MNRAS.456..356D/abstract},
	doi = {10.1093/mnras/stv2638},
	abstract = {The massive cluster {MACSJ}1149.5+2223(z = 0.544) displays five very large lensed images of a well-resolved spiral galaxy at z{\textless}{SUB}{\textgreater}spect{\textless}/{SUB}{\textgreater} = 1.491. It is within one of these images that the first example of a multiply lensed supernova ({SN}) has been detected recently as part of the Grism Lens-Amplified Survey from Space. The depth of this data also reveals many H {II} regions within the lensed spiral galaxy which we identify between the five counter-images. Here, we expand the capability of our free-form method to incorporate these H {II} regions locally, with other reliable lensed galaxies added for a global solution. This improved accuracy allows us to estimate when the Refsdal {SN} will appear within the other lensed images of the spiral galaxy to an accuracy of ̃7 per cent. We predict this {SN} will reappear in one of the counter-images ({RA} = 11:49:36.025, Dec. = +22:23:48.11, J2000) and on 2015 November 1 (with an estimated error of ±25 d) it will be at the same phase as it was when it was originally discovered, offering a unique opportunity to study the early phases of this {SN} and to examine the consistency of the mass model and the cosmological model that have an impact on the time delay prediction.},
	pages = {356},
	journaltitle = {Monthly Notices of the Royal Astronomical Society},
	author = {Diego, Jose M. and Broadhurst, Tom and Chen, Cuncheng and Lim, Jeremy and Zitrin, Adi and Chan, Brian and Coe, Dan and Ford, Holland C. and Lam, Daniel and Zheng, Wei},
	urldate = {2019-10-23},
	date = {2016-02},
	langid = {english}
}

@article{courbin_cosmograil:_2011,
	title = {{COSMOGRAIL}: the {COSmological} {MOnitoring} of {GRAvItational} Lenses. {IX}. Time delays, lens dynamics and baryonic fraction in {HE} 0435-1223},
	volume = {536},
	url = {https://ui.adsabs.harvard.edu/2011A&A...536A..53C/abstract},
	doi = {10.1051/0004-6361/201015709},
	shorttitle = {{COSMOGRAIL}},
	abstract = {We present accurate time delays for the quadruply imaged quasar {HE} 0435-1223. The delays were measured from 575 independent photometric points obtained in the R-band between January 2004 and March 2010. With seven years of data, we clearly show that quasar image A is affected by strong microlensing variations and that the time delays are best expressed relative to quasar image B. We measured ∆t{\textless}{SUB}{\textgreater}{BC}{\textless}/{SUB}{\textgreater} = 7.8 ± 0.8 days, ∆t{\textless}{SUB}{\textgreater}{BD}{\textless}/{SUB}{\textgreater} = -6.5 ± 0.7 days and ∆t{\textless}{SUB}{\textgreater}{CD}{\textless}/{SUB}{\textgreater} = -14.3 ± 0.8 days. We spacially deconvolved {HST} {NICMOS}2 F160W images to derive accurate astrometry of the quasar images and to infer the light profile of the lensing galaxy. We combined these images with a stellar population fitting of a deep {VLT} spectrum of the lensing galaxy to estimate the baryonic fraction, f{\textless}{SUB}{\textgreater}b{\textless}/{SUB}{\textgreater}, in the Einstein radius. We measured f{\textless}{SUB}{\textgreater}b{\textless}/{SUB}{\textgreater} = 0.65{\textless}{SUB}{\textgreater}-0.10{\textless}/{SUB}{\textgreater}{\textless}{SUP}{\textgreater}+0.13{\textless}/{SUP}{\textgreater} if the lensing galaxy has a Salpeter {IMF} and f{\textless}{SUB}{\textgreater}b{\textless}/{SUB}{\textgreater} = 0.45{\textless}{SUB}{\textgreater}-0.07{\textless}/{SUB}{\textgreater}{\textless}{SUP}{\textgreater}+0.04{\textless}/{SUP}{\textgreater} if it has a Kroupa {IMF}. The spectrum also allowed us to estimate the velocity dispersion of the lensing galaxy, σ{\textless}{SUB}{\textgreater}ap{\textless}/{SUB}{\textgreater} = 222 ± 34 km s{\textless}{SUP}{\textgreater}-1{\textless}/{SUP}{\textgreater}. We used f{\textless}{SUB}{\textgreater}b{\textless}/{SUB}{\textgreater} and σ{\textless}{SUB}{\textgreater}ap{\textless}/{SUB}{\textgreater} to constrain an analytical model of the lensing galaxy composed of an Hernquist plus generalized {NFW} profile. We solved the Jeans equations numerically for the model and explored the parameter space under the additional requirement that the model must predict the correct astrometry for the quasar images. Given the current error bars on f{\textless}{SUB}{\textgreater}b{\textless}/{SUB}{\textgreater} and σ{\textless}{SUB}{\textgreater}ap{\textless}/{SUB}{\textgreater}, we did not constrain H{\textless}{SUB}{\textgreater}0{\textless}/{SUB}{\textgreater} yet with high accuracy, i.e., we found a broad range of models with χ{\textless}{SUP}{\textgreater}2{\textless}/{SUP}{\textgreater} \&lt; 1. However, narrowing this range is possible, provided a better velocity dispersion measurement becomes available. In addition, increasing the depth of the current {HST} imaging data of {HE} 0435-1223 will allow us to combine ourconstraints with lens reconstruction techniques that make use of the full Einstein ring that is visible in this object. Based on observations made with the 1.2 m Euler Swiss Telescope, the 1.5 m telescope of Maidanak Observatory in Uzbekistan, and with the 1.2 m Mercator Telescope, operated on the island of La Palma by the Flemish Community, at the Spanish Observatorio del Roque de los Muchachos of the Instituto de Astrofísica de Canarias. The {NASA}/{ESA} Hubble Space Telescope data was obtained from the data archive at the Space Telescope Science Institute, which is operated by {AURA}, the Association of Universities for Research in Astronomy, Inc., under {NASA} contract {NAS}-5-26555.Light curves are only available at the {CDS} via anonymous ftp to cdsarc.u-strasbg.fr (130.79.128.5) or via {\textless}A href="http://cdsarc.u-strasbg.fr/viz-bin/qcat?J/A+A/536/A53"{\textgreater}http://cdsarc.u-strasbg.fr/viz-bin/qcat?J/A+A/536/A53{\textless}/A{\textgreater}},
