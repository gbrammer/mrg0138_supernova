@article{kolatt_gravitational_1998,
	title = {Gravitational lensing of type {IA} supernovae by galaxy clusters},
	volume = {296},
	url = {https://ui.adsabs.harvard.edu/1998MNRAS.296..763K/abstract},
	doi = {10.1046/j.1365-8711.1998.01466.x},
	abstract = {We propose a method to remove the mass-sheet degeneracy that arises when the mass of galaxy clusters is inferred from gravitational shear. The method utilizes high-redshift standard candles that undergo weak lensing. Natural candidates for such standard candles are type Ia supernovae ({SNe} Ia). When corrected with the light-curve shape ({LCS}), the peak magnitude of {SNe} Ia provides a standard candle with an uncertainty in apparent magnitude of Deltam{\textasciitilde}=0.1-0.2. Gravitational magnification of a background {SN} Ia by an intervening cluster would cause a mismatch between the observed {SN} Ia peak magnitude compared with that expected from its {LCS} and redshift. The average detection rate for {SNe} Ia with a significant mismatch of \&gt;=2Deltam behind a cluster at z{\textasciitilde}=0.05-0.15 is about 1-2 supernovae per cluster per year at J, I, R\&lt;{\textasciitilde}25-26. Since {SNe} are point-like sources for a limited period, they can experience significant microlensing by massive compact halo objects ({MACHOs}) in the intracluster medium. Microlensing events caused by {MACHOs} of {\textasciitilde}10{\textasciicircum}-4 Msolar are expected to have time-scales similar to that of the {SN} light curve. Both the magnification curve by a {MACHO} and the light curve of a {SN} Ia have characteristic shapes that allow us to separate them. Microlensing events caused by {MACHOs} of smaller mass can unambiguously be identified in the {SN} light curve if the latter is continuously monitored. The average number of identifiable microlensing events per nearby cluster (z\&lt;{\textasciitilde}0.05) per year is {\textasciitilde}0.02 (f/0.01), where f is the fraction of the cluster mass in {MACHOs} of masses 10{\textasciicircum}-7\&lt;M\_macho/Msolar\&lt;10{\textasciicircum}-4.},
	pages = {763},
	journaltitle = {Monthly Notices of the Royal Astronomical Society},
	author = {Kolatt, Tsafrir S. and Bartelmann, Matthias},
	urldate = {2019-10-23},
	date = {1998-05},
	langid = {english}
}

@article{kochanek_quantitative_2004,
	title = {Quantitative Interpretation of Quasar Microlensing Light Curves},
	volume = {605},
	url = {https://ui.adsabs.harvard.edu/2004ApJ...605...58K/abstract},
	doi = {10.1086/382180},
	abstract = {We develop a general method for analyzing the light curves of microlensed quasars and apply it to the {OGLE} light curves of the four-image lens Q2237+0305. We simultaneously estimate the effective source velocity, the average stellar mass, the stellar mass function, and the size and structure of the quasar accretion disk. The light curves imply an effective source-plane velocity of 10,200kms{\textless}{SUP}{\textgreater}-1{\textless}/{SUP}{\textgreater}\&lt;{\textasciitilde}v{\textless}{SUB}{\textgreater}e{\textless}/{SUB}{\textgreater}h\&lt;M/M{\textless}{SUB}{\textgreater}solar{\textless}/{SUB}{\textgreater}\&gt;{\textless}{SUP}{\textgreater}-1/2{\textless}/{SUP}{\textgreater}\&lt;{\textasciitilde}39,600 km s{\textless}{SUP}{\textgreater}-1{\textless}/{SUP}{\textgreater} (68\% confidence). Given an independent estimate for the source velocity, found by combining estimates for the peculiar velocity of the lens galaxy with its measured stellar velocity dispersion, we obtain a mean stellar mass of \&lt;M\&gt;{\textasciitilde}=0.037 h{\textless}{SUP}{\textgreater}2{\textless}/{SUP}{\textgreater} M{\textless}{SUB}{\textgreater}solar{\textless}/{SUB}{\textgreater} (0.0059h{\textless}{SUP}{\textgreater}2{\textless}/{SUP}{\textgreater}M{\textless}{SUB}{\textgreater}solar{\textless}/{SUB}{\textgreater}\&lt;{\textasciitilde}\&lt;M\&gt;\&lt;{\textasciitilde}0.20h{\textless}{SUP}{\textgreater}2{\textless}/{SUP}{\textgreater}M{\textless}{SUB}{\textgreater}solar{\textless}/{SUB}{\textgreater}). We were unable to distinguish a Salpeter mass function from one in which all stars had the same mass, but we do find a strong lower bound of κ{\textless}{SUB}{\textgreater}*{\textless}/{SUB}{\textgreater}/κ\&gt;{\textasciitilde}0.5 on the fraction of the surface mass density represented by the microlenses. Our models favor a standard thin accretion disk model as the source structure over a simple Gaussian source. For a face-on, thin disk radiating as a blackbody with temperature profile T{\textless}{SUB}{\textgreater}s{\textless}/{SUB}{\textgreater}{\textasciitilde}R{\textless}{SUP}{\textgreater}-3/4{\textless}/{SUP}{\textgreater}, the radius r{\textless}{SUB}{\textgreater}s{\textless}/{SUB}{\textgreater} where the temperature matches the filter pass band [2000 Å or T{\textless}{SUB}{\textgreater}s{\textless}/{SUB}{\textgreater}(r{\textless}{SUB}{\textgreater}s{\textless}/{SUB}{\textgreater}){\textasciitilde}=7×10{\textless}{SUP}{\textgreater}4{\textless}/{SUP}{\textgreater} K] is 1.4×10{\textless}{SUP}{\textgreater}15{\textless}/{SUP}{\textgreater}h{\textless}{SUP}{\textgreater}-1{\textless}/{SUP}{\textgreater}cm\&lt;{\textasciitilde}r{\textless}{SUB}{\textgreater}s{\textless}/{SUB}{\textgreater}\&lt;{\textasciitilde}4.5×10{\textless}{SUP}{\textgreater}15{\textless}/{SUP}{\textgreater}h{\textless}{SUP}{\textgreater}-1{\textless}/{SUP}{\textgreater}cm. The flux predicted by the disk model agrees with the observed flux of the quasar, so nonthermal or optically thin emission processes are not required. From the disk structure we estimate a black hole mass of M{\textless}{SUB}{\textgreater}{BH}{\textless}/{SUB}{\textgreater}{\textasciitilde}=1.1{\textless}{SUP}{\textgreater}+1.4{\textless}/{SUP}{\textgreater}{\textless}{SUB}{\textgreater}-0.7{\textless}/{SUB}{\textgreater}×10{\textless}{SUP}{\textgreater}9{\textless}/{SUP}{\textgreater}h{\textless}{SUP}{\textgreater}-3/2{\textless}/{SUP}{\textgreater}η{\textless}{SUP}{\textgreater}1/2{\textless}/{SUP}{\textgreater}{\textless}{SUB}{\textgreater}0.1{\textless}/{SUB}{\textgreater}(L/L{\textless}{SUB}{\textgreater}E{\textless}/{SUB}{\textgreater}){\textless}{SUP}{\textgreater}-1/2{\textless}/{SUP}{\textgreater}M{\textless}{SUB}{\textgreater}solar{\textless}/{SUB}{\textgreater}, consistent with the mass estimated under the assumption that the quasar is radiating at the Eddington luminosity (L/L{\textless}{SUB}{\textgreater}E{\textless}/{SUB}{\textgreater}=1).},
