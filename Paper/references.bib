}

@article{kasen_timedependent_2006,
	title = {Time‐dependent {Monte} {Carlo} {Radiative} {Transfer} {Calculations} for {Three}‐dimensional {Supernova} {Spectra}, {Light} {Curves}, and {Polarization}},
